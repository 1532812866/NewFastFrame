<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.example.commonlibrary.cusotomview.RoundAngleImageView
        android:id="@+id/riv_item_view_pop_window_fragment_bottom_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        app:roundHeight="20dp"
        app:roundWidth="20dp" />


    <ImageView
        android:id="@+id/iv_item_view_pop_window_fragment_bottom_artist_delete"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_delete_white_24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/iv_item_view_pop_window_fragment_bottom_artist_delete"
        android:layout_toRightOf="@id/riv_item_view_pop_window_fragment_bottom_avatar"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_item_view_pop_window_fragment_bottom_artist_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="姓名"
            android:textColor="@color/base_color_text_white" />

        <TextView
            android:id="@+id/tv_item_view_pop_window_fragment_bottom_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/base_color_text_grey" />
    </LinearLayout>


</RelativeLayout>