<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/rl_fragment_person_title_bg"
        android:background="@drawable/cug_index"
        android:layout_width="match_parent"
        android:layout_height="200dp">

        <com.example.commonlibrary.cusotomview.RoundAngleImageView
            android:scaleType="centerCrop"
            android:id="@+id/riv_fragment_person_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:roundHeight="30dp"
            app:roundWidth="30dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/ic_launcher_round"/>



        <TextView
            android:textColor="@color/red_500"
            android:layout_marginTop="10dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/riv_fragment_person_avatar"
            android:text="签名"
            android:id="@+id/tv_fragment_person_signature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>








</LinearLayout>