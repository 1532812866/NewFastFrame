<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_fragment_bottom_container">


    <com.example.commonlibrary.cusotomview.RoundAngleImageView
        android:id="@+id/riv_fragment_bottom_album"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@mipmap/ic_launcher"
        app:roundHeight="30dp"
        app:roundWidth="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginLeft="80dp"
        android:orientation="vertical"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_fragment_bottom_song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="歌名"
            android:textColor="@color/base_color_text_blue"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tv_fragment_bottom_artist_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="专辑"
            android:textColor="@color/base_color_text_grey"
            android:textSize="14sp" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_fragment_bottom_icon_container"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_fragment_bottom_next"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_skip_next_black_24dp" />

        <ImageView
            android:id="@+id/iv_fragment_bottom_play"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_fragment_bottom_next"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_play_arrow_black_24dp" />

        <ImageView
            android:id="@+id/iv_fragment_bottom_previous"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_fragment_bottom_play"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_skip_previous_black_24dp" />

        <ImageView
            android:id="@+id/iv_fragment_bottom_like"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:layout_toLeftOf="@+id/iv_fragment_bottom_previous"
            android:alpha="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_favorite_black_24dp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_fragment_bottom_list"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_toRightOf="@+id/iv_fragment_bottom_next"
            android:alpha="0"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_queue_music_black_24dp" />
    </RelativeLayout>


    <SeekBar
        android:id="@+id/sb_fragment_bottom_seek"
        style="@style/Widget.AppCompat.SeekBar"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/transparent"
        android:minHeight="5dp"
        android:progress="0"
        android:progressDrawable="@drawable/progressbar_color"
        android:thumb="@null"
        android:visibility="visible" />


</RelativeLayout>